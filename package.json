{
  "name": "mongo-aggregate-builder",
  "version": "0.0.1",
  "license": "MIT",
  "repository": {
    "url": "https://github.com/alemanek/mongo-aggregate-builder.git"
  },
  "files": [
    "lib"
  ],
  "scripts": {
    "build-docs": "npx typedoc --out docs src",
    "build": "npm run format && npm run lint && npm run test && tsc -p tsconfig.build.json",
    "format": "prettier --config .prettierrc src/**/*.ts --write",
    "lint": "eslint . --ext .ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "deploy": "rm -rf lib && npm run lint && npm run build && npm run test && npm run build-docs && npm publish"
  },
  "dependencies": {},
  "devDependencies": {
    "@types/jest": "^26.0.3",
    "@types/node": "^10.14.4",
    "@typescript-eslint/eslint-plugin": "^4.17.0",
    "@typescript-eslint/parser": "^4.17.0",
    "eslint": "^7.22.0",
    "jest": "^26.6.3",
    "nodemon": "^1.18.11",
    "prettier": "^1.16.4",
    "ts-jest": "^26.5.3",
    "ts-node": "^7.0.1",
    "tsconfig-paths": "^3.8.0",
    "tslint-config-prettier": "^1.18.0",
    "typedoc": "^0.20.31",
    "typescript": "^4.2.3"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "diagnostics": false
      }
    },
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "src/**/{!(mock|spec),}.ts"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
